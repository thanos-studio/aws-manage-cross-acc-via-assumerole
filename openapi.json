{
  "openapi": "3.0.3",
  "info": {
    "title": "Sigmoid Managed IAM API",
    "version": "0.0.0-dev",
    "description": "Programmatic interface for provisioning and validating Sigmoid managed IAM roles."
  },
  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "API base URL"
    }
  ],
  "paths": {
    "/api/health": {
      "get": {
        "operationId": "healthProbe",
        "summary": "Health check endpoint",
        "tags": [
          "Health"
        ],
        "responses": {
          "200": {
            "description": "Service is reachable.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HealthResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/users": {
      "post": {
        "operationId": "createUser",
        "summary": "Issue a user identifier for Sigmoid operators.",
        "tags": [
          "Users"
        ],
        "requestBody": {
          "required": false,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserCreateRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User created.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserCreateResponse"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input payload.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/register": {
      "post": {
        "operationId": "registerOrg",
        "summary": "Register an organisation and issue API credentials.",
        "tags": [
          "Organisations"
        ],
        "parameters": [
          {
            "name": "user_id",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Operator identifier issued via POST /api/users."
          },
          {
            "name": "Idempotency-Key",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Opaque identifier that prevents duplicate organisation registrations."
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/OrgRegisterRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Organisation registered.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/OrgRegisterResponse"
                }
              }
            }
          },
          "404": {
            "description": "User not found.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "409": {
            "description": "Organisation already exists or idempotency conflict.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input payload.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/integrate": {
      "post": {
        "operationId": "integrateOrg",
        "summary": "Generate console links and CLI commands for onboarding.",
        "tags": [
          "Integrations"
        ],
        "parameters": [
          {
            "name": "user_id",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Operator identifier issued via POST /api/users."
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/IntegrationRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Integration links issued.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/IntegrationResponse"
                }
              }
            }
          },
          "401": {
            "description": "API key mismatch.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "404": {
            "description": "User not found.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input payload.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/credentials": {
      "post": {
        "operationId": "issueCredentials",
        "summary": "Assume roles in the managed account once validation completes.",
        "tags": [
          "Credentials"
        ],
        "parameters": [
          {
            "name": "user_id",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Operator identifier issued via POST /api/users."
          },
          {
            "name": "aws_profile",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            },
            "description": "Optional AWS profile label echoed back in responses."
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CredentialsRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "STS credentials issued.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CredentialsResponse"
                }
              }
            }
          },
          "401": {
            "description": "API key mismatch.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "404": {
            "description": "User not found.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "412": {
            "description": "Organisation validation incomplete.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "429": {
            "description": "Rate limit exceeded.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "502": {
            "description": "Upstream AWS error during assume_role.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input payload.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/validate": {
      "post": {
        "operationId": "validateCredentials",
        "summary": "Verify arbitrary STS credentials against the Managed IAM policy.",
        "tags": [
          "Credentials"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ValidateRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Credentials validated.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ValidateResponse"
                }
              }
            }
          },
          "401": {
            "description": "API key mismatch.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "404": {
            "description": "User not found.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "412": {
            "description": "Organisation validation incomplete.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "429": {
            "description": "Rate limit exceeded.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input payload.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/integrations/validate": {
      "post": {
        "operationId": "validationWebhook",
        "summary": "Webhook consumed by the validation Lambda stack.",
        "tags": [
          "Integrations"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ValidationWebhookPayload"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Validation result recorded.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ValidationWebhookResponse"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input payload.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "UserCreateRequest": {
        "properties": {
          "metadata": {
            "anyOf": [
              {
                "additionalProperties": true,
                "type": "object"
              },
              {
                "type": "null"
              }
            ],
            "default": null,
            "title": "Metadata"
          }
        },
        "title": "UserCreateRequest",
        "type": "object"
      },
      "UserCreateResponse": {
        "properties": {
          "user_id": {
            "description": "Generated user identifier",
            "title": "User Id",
            "type": "string"
          },
          "metadata": {
            "anyOf": [
              {
                "additionalProperties": true,
                "type": "object"
              },
              {
                "type": "null"
              }
            ],
            "default": null,
            "title": "Metadata"
          }
        },
        "required": [
          "user_id"
        ],
        "title": "UserCreateResponse",
        "type": "object"
      },
      "OrgRegisterRequest": {
        "properties": {
          "org_name": {
            "maxLength": 32,
            "minLength": 3,
            "title": "Org Name",
            "type": "string"
          }
        },
        "required": [
          "org_name"
        ],
        "title": "OrgRegisterRequest",
        "type": "object"
      },
      "OrgRegisterResponse": {
        "properties": {
          "org_name": {
            "title": "Org Name",
            "type": "string"
          },
          "api_key": {
            "title": "Api Key",
            "type": "string"
          },
          "external_id": {
            "title": "External Id",
            "type": "string"
          }
        },
        "required": [
          "org_name",
          "api_key",
          "external_id"
        ],
        "title": "OrgRegisterResponse",
        "type": "object"
      },
      "IntegrationRequest": {
        "properties": {
          "org_name": {
            "maxLength": 32,
            "minLength": 3,
            "title": "Org Name",
            "type": "string"
          },
          "api_key": {
            "title": "Api Key",
            "type": "string"
          },
          "aws_profile": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ],
            "default": null,
            "title": "Aws Profile"
          },
          "expires_in": {
            "default": 3600,
            "maximum": 43200,
            "minimum": 300,
            "title": "Expires In",
            "type": "integer"
          }
        },
        "required": [
          "org_name",
          "api_key"
        ],
        "title": "IntegrationRequest",
        "type": "object"
      },
      "IntegrationResponse": {
        "properties": {
          "console_url": {
            "title": "Console Url",
            "type": "string"
          },
          "aws_cli_command": {
            "title": "Aws Cli Command",
            "type": "string"
          },
          "template_url": {
            "title": "Template Url",
            "type": "string"
          },
          "region": {
            "title": "Region",
            "type": "string"
          }
        },
        "required": [
          "console_url",
          "aws_cli_command",
          "template_url",
          "region"
        ],
        "title": "IntegrationResponse",
        "type": "object"
      },
      "CredentialsRequest": {
        "properties": {
          "org_name": {
            "title": "Org Name",
            "type": "string"
          },
          "target_account_id": {
            "maxLength": 12,
            "minLength": 12,
            "title": "Target Account Id",
            "type": "string"
          },
          "role_type": {
            "pattern": "^(readonly)$",
            "title": "Role Type",
            "type": "string"
          },
          "api_key": {
            "title": "Api Key",
            "type": "string"
          }
        },
        "required": [
          "org_name",
          "target_account_id",
          "role_type",
          "api_key"
        ],
        "title": "CredentialsRequest",
        "type": "object"
      },
      "CredentialsResponse": {
        "properties": {
          "access_key_id": {
            "title": "Access Key Id",
            "type": "string"
          },
          "secret_access_key": {
            "title": "Secret Access Key",
            "type": "string"
          },
          "session_token": {
            "title": "Session Token",
            "type": "string"
          },
          "expiration": {
            "title": "Expiration",
            "type": "string"
          },
          "console_url": {
            "title": "Console Url",
            "type": "string"
          },
          "aws_cli_command": {
            "title": "Aws Cli Command",
            "type": "string"
          },
          "template_url": {
            "title": "Template Url",
            "type": "string"
          },
          "region": {
            "title": "Region",
            "type": "string"
          }
        },
        "required": [
          "access_key_id",
          "secret_access_key",
          "session_token",
          "expiration",
          "console_url",
          "aws_cli_command",
          "template_url",
          "region"
        ],
        "title": "CredentialsResponse",
        "type": "object"
      },
      "ValidateRequest": {
        "properties": {
          "access_key_id": {
            "title": "Access Key Id",
            "type": "string"
          },
          "secret_access_key": {
            "title": "Secret Access Key",
            "type": "string"
          },
          "session_token": {
            "title": "Session Token",
            "type": "string"
          },
          "org_name": {
            "maxLength": 32,
            "minLength": 3,
            "title": "Org Name",
            "type": "string"
          },
          "api_key": {
            "title": "Api Key",
            "type": "string"
          },
          "user_id": {
            "title": "User Id",
            "type": "string"
          },
          "region": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ],
            "default": null,
            "title": "Region"
          },
          "aws_profile": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ],
            "default": null,
            "title": "Aws Profile"
          }
        },
        "required": [
          "access_key_id",
          "secret_access_key",
          "session_token",
          "org_name",
          "api_key",
          "user_id"
        ],
        "title": "ValidateRequest",
        "type": "object"
      },
      "ValidateResponse": {
        "properties": {
          "success": {
            "title": "Success",
            "type": "boolean"
          },
          "identity_arn": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ],
            "default": null,
            "title": "Identity Arn"
          },
          "message": {
            "title": "Message",
            "type": "string"
          }
        },
        "required": [
          "success",
          "message"
        ],
        "title": "ValidateResponse",
        "type": "object"
      },
      "ValidationWebhookPayload": {
        "properties": {
          "org_name": {
            "title": "Org Name",
            "type": "string"
          },
          "api_key": {
            "title": "Api Key",
            "type": "string"
          },
          "account_id": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ],
            "default": null,
            "title": "Account Id"
          },
          "account_partition": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ],
            "default": null,
            "title": "Account Partition"
          },
          "account_tags": {
            "anyOf": [
              {
                "additionalProperties": {
                  "type": "string"
                },
                "type": "object"
              },
              {
                "type": "null"
              }
            ],
            "default": null,
            "title": "Account Tags"
          },
          "aws_profile": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ],
            "default": null,
            "title": "Aws Profile"
          }
        },
        "required": [
          "org_name",
          "api_key"
        ],
        "title": "ValidationWebhookPayload",
        "type": "object"
      },
      "ValidationWebhookResponse": {
        "properties": {
          "org_name": {
            "title": "Org Name",
            "type": "string"
          },
          "validated": {
            "title": "Validated",
            "type": "boolean"
          },
          "account_id": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ],
            "default": null,
            "title": "Account Id"
          },
          "account_partition": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ],
            "default": null,
            "title": "Account Partition"
          },
          "account_tags": {
            "anyOf": [
              {
                "additionalProperties": {
                  "type": "string"
                },
                "type": "object"
              },
              {
                "type": "null"
              }
            ],
            "default": null,
            "title": "Account Tags"
          }
        },
        "required": [
          "org_name",
          "validated"
        ],
        "title": "ValidationWebhookResponse",
        "type": "object"
      },
      "ErrorResponse": {
        "type": "object",
        "required": [
          "detail"
        ],
        "properties": {
          "detail": {
            "description": "Human readable error message or structured validation errors."
          }
        }
      },
      "HealthResponse": {
        "type": "object",
        "required": [
          "status",
          "environment",
          "version"
        ],
        "properties": {
          "status": {
            "type": "string",
            "example": "ok"
          },
          "environment": {
            "type": "string",
            "example": "dev"
          },
          "version": {
            "type": "string",
            "example": "0.1.0"
          }
        }
      }
    }
  },
  "tags": [
    {
      "name": "Health"
    },
    {
      "name": "Users"
    },
    {
      "name": "Organisations"
    },
    {
      "name": "Integrations"
    },
    {
      "name": "Credentials"
    }
  ]
}
